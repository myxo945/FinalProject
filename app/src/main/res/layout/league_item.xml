<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/leagueBadge" android:background="@color/colorPrimaryDark" android:padding="8dp"
            android:contentDescription="@string/league_fan_art"/>
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/leagueName"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/leagueBadge" android:textAlignment="center" android:paddingTop="16dp"
            android:textColor="@color/colorPrimary" android:paddingBottom="16dp" android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_horizontal" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>